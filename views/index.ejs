<!DOCTYPE html>
<html>

<head>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font: 13px Helvetica, Arial;
    }

    #app {
    
      padding: 3px;
      position: fixed;
      bottom: 0;
      width: 100%;
    }

    #app input {
      border: 0;
      padding: 10px;
      width: 90%;
      margin-right: .5%;
    }

    #app button {
      width: 9%;
      background: rgb(130, 224, 255);
      border: none;
      padding: 10px;
    }

    #messages {
      list-style-type: none;
      margin: 0;
      padding: 0;
    }

    #messages li {
      padding: 5px 10px;
    }

    #messages li:nth-child(odd) {
      background: #eee;
    }
  </style>
</head>

<body>
  <div id="app">
    <ul>
      <li v-for="msg in messages">
        {{ msg }}
      </li>
    </ul>


    <input v-model="msg" />
    <button v-on:click="executeFoo">Send</button>

  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js"></script>
  <script src="https://unpkg.com/vue@2.4.2/dist/vue.js"></script>
  <script>
    var socket = io();
    socket.on('join', function (msg) {
      alert(msg);
    });

    var msgs = [];

    socket.on('message',function(msg){
      console.log('message event');
      console.log(msg);
      msgs.push(msg);
    });

    var app = new Vue({
      el: "#app",
      data: {
        msg: "",
        messages:msgs
      },
      methods: {
        executeFoo: function () {
          socket.emit('message', this.msg);
          console.log('Emit: message - ' + this.msg);
          return false;
        }
      }
    });
  </script>
</body>

</html>